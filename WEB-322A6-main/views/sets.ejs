<!DOCTYPE html>
<html lang="en" data-theme="cupcake">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lego Collection - Sets</title>
  <link href="/css/main.css" rel="stylesheet">
</head>
<body class="bg-base-100 text-base-content">

  <!-- Updated Navbar -->
  <%- include('./partials/navbar', { page: '/lego/sets' }) %>

  <!-- Hero Section -->
  <div class="hero bg-base-200 rounded-lg p-6 mb-4">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-5xl font-bold">Explore Our Lego Collection</h1>
        <div class="border-b border-transparent mt-2"></div>
        <div class="flex justify-center space-x-4 mt-4">
          <form action="/Lego/sets?theme=name">
            <input type="text" name = "theme" placeholder="Search According to Theme" class="input input-bordered input-warning w-full max-w-xs rounded-full" />
            </form> 
        </div>
        <p class="py-6">Discover a wide variety of Lego sets available in our collection!</p>
      </div>
    </div>
  </div>

  <!-- Sets Table -->
  <div class="container mx-auto p-4">
    <table class="table-auto w-full bg-base-200 rounded-lg shadow-lg">
      <thead>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th>Theme</th>
          <th>Release Year</th>
          <th>Number of Parts</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% sets.forEach(set => { %>
          <tr class="border-t">
            <!-- Image -->
            <td class="p-2">
              <img src="<%= set.img_url %>" alt="<%= set.name %>" class="w-24 h-24 object-cover rounded-lg">
            </td>
            <!-- Name -->
            <td class="p-2 text-center"><%= set.name %></td>
            <!-- Theme as Link -->
            <td class="p-2 text-center">
               
            </td>
            <!-- Release Year -->
            <td class="p-2 text-center"><%= set.year %></td>
            <!-- Number of Parts -->
            <td class="p-2 text-center"><%= set.num_parts %></td>
            <!-- Actions (Details, Edit, Delete) -->
            <td class="p-2 text-center">
              <a href="/lego/sets/<%= set.set_num %>" class="btn btn-primary mr-2 bg-blue-600 hover:bg-blue-700 text-white">View Details</a>
              <a href="/lego/editSet/<%= set.set_num %>" class="btn btn-success mr-2 bg-green-600 hover:bg-green-700 text-white">Edit Set</a>
              <a href="/lego/deleteSet/<%= set.set_num %>" class="btn btn-error bg-red-600 hover:bg-red-700 text-white" onclick="return confirm('Are you sure you want to delete this Lego set?');">Delete Set</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</body>
</html>
